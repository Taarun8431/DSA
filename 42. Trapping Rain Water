class Solution {
    public int trap(int[] height) {

        int r = height.length-1, l = 0;
        int rmax = 0, lmax = 0;
        int ans = 0;

        while (l < r) {
            rmax = Math.max(rmax, height[r]);
            lmax = Math.max(lmax, height[l]);
            if (lmax < rmax) {
                ans += lmax - height[l];
                l++;
            } else {
                ans += rmax - height[r];
                r--;
            }

        }

        return ans;

    }

}
