import java.util.*;
public class stockSpan {
    public static void stockSpan(int stocks[],int span[])
    {
        // First we create a stack to store the index of the prevHigh
        Stack<Integer> s=new Stack<>();
        span[0]=1;
        s.push(0);
        // Next we run a loop to constantly check the curr price is greater than any other prev element
        for(int i=1;i<stocks.length;i++)
        {
            int currPrice=stocks[i];
            // Now check in the stack if there exist a element greater than curr Price until than pop elements
            while(!s.isEmpty() && currPrice>stocks[s.peek()])
            {
                s.pop();
            }
            if(s.isEmpty())
            {
                span[i]=i+1;
            }
            else
            {
                  int prevHigh=s.peek();
            span[i]=i-prevHigh;
            }
           
            s.push(i);
        }
        

    }
    public static void main(String[]args)
    {
        int stock[]={100,80,60,70,60,85,100};
        int span[]=new int[stock.length];
        stockSpan(stock, span);
        for(int i=0;i<span.length;i++)
        {
            System.out.print(span[i] +" ");
        }
    }
    
}
