class Solution {
    public boolean isMonotonic(int[] nums) {
        boolean isIncreasing=false;
        boolean isDecreasing=false;
        for(int i=1;i<nums.length;i++)
        {
            if(nums[i-1]<nums[i])
            {
                isIncreasing=true;
            }
            if(nums[i-1]>nums[i])
            {
                isDecreasing=true;
            }
          

        }
        
          if(isIncreasing == true && isDecreasing==true)
            {
                return false;
            }
            return true;
        
    }
}
