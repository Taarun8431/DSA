    public class LinkedList {
        public static class Node {
        
            int data;
            Node next;
            public Node(int data)
            {
            this.data=data;
            this.next=null;
            } //
        }
        public Node head;
        public Node tail;
        public static int size;
        public void addFirst(int data)
        {
            Node newNode=new Node(data);
            size++;
            if(head==null)
            {
                head=tail=newNode;
                return;
            }
            newNode.next=head;
            head=newNode;
        }
        public void addLast(int data)
        {
            // Create a new node with the given data
            Node newNode=new Node(data);
            size++;
            // If the list is empty, set head and tail to the new node
            if(head==null)
            {
                head=tail=newNode;
                return;
            }
            tail.next=newNode;
            tail=newNode;
        }
        public void addMiddle(int index,int data)
        {
            Node newNode=new Node(data);// This is the middle node which will be inserted
            size++;
            Node temp=head;
            int i=0;
            while(i<index-1)
            {
                temp=temp.next;
                i++;
            }
            // Now the assigning logic and addition of the middle node
            newNode.next=temp.next;
            temp.next=newNode;
            
        }
        public void removeFirst()
        {
            if(size==0)
            {
                System.out.println("LL is empty");
                return;
            }
            if(size==0)
            {
                head=tail=null;
                size=0;
                return;
            }
            head=head.next;
            size--;
        }
        public void removeLast()
        {
            Node temp=head;
            if(size==0)
            {
                System.out.println("LL is empty");
                return;
            }
            if(size==1)
            {
                head=tail=null;
                size=0;
                return;
            }
            for(int i=0;i<size-2;i++)
            {
            temp=temp.next;
            }
            tail=temp;temp.next=null;
            size--;
        }
        public void search(int key)
        {
            // This is the iterative approach
            Node temp=head;
            int i=0;
            while(temp.next!=null)
            {
                if(temp.data==key)
                {
                    System.out.println("Key found");
                    System.out.println("At index"+i);
                }
                temp=temp.next;
                i++;
            }
        }
        // This is the recursice approach
        public int recSearch(Node head,int key)
        {
            // This is the base case
            if(head==null)
            {
                return -1;
            }
            // If the head data matches with the key
            if(head.data==key)
            {
                return 0;
            }
        int idx= recSearch(head.next, key);
        if(idx==-1)
        {
            return -1;
        }
        return idx+1;

        }
        // Here recursion logic is used
        public int searchLL(int key)
        {
            return recSearch(head,key);
            
        }
    
        public void print()
        {
            Node temp=head;
            while(temp!=null)
            {
                System.out.print(temp.data+"->");
                temp=temp.next;
            }
            System.out.println("null");
            System.out.println("Size :"+size);
        }
    
        public static void main(String[] args) {
            LinkedList list=new LinkedList();
            list.addFirst(2);
            list.addFirst(1);
            
            list.addLast(3);
            list.addLast(4);
            list.addMiddle(2,29);
            // list.removeFirst();
            //    list.removeLast();
            System.out.println(list.searchLL(10)); 
                list.print();
        }
        
        
    }
