public class nthNodeRemoval {
    public static class Node
    {
        int data;
        Node next;
        public Node(int data)
        {
            this.data=data;
            this.next=null;
        }

    }
    public Node head;
    public Node tail;
    public int size;
    public void addFirst(int data)
    {
        Node newNode=new Node(data);
       // size++;
        if(head==null)
        {
            head=tail=newNode;
            return;
        }
        newNode.next=head;
        head=newNode;
    }
    public void print()
    {
        Node temp=head;
        while(temp!=null)
        {
            System.out.print(temp.data+"->");
            temp=temp.next;
        }
        System.out.println("null");
      //  System.out.println("Size :"+size);
    }
    public void remoeNthnode(int n)
    {
        // First find the size of the linked list
        Node tmp1=head;
        int sz=0;
        while(tmp1!=null)
        {
            sz++;
            tmp1=tmp1.next;
        }
       int idx=1;
       Node temp=head;
       if(n==sz)
       {
        // Remove the head node
        head=head.next;
        return;
       }
       int itoFind=sz-n;
      
       while(idx<itoFind)
       {
         temp=temp.next;
            idx++;
         
       }
       temp.next=temp.next.next;
        return;
    }

    public static void main(String[]args)
    {
        nthNodeRemoval list=new nthNodeRemoval();
        list.addFirst(10);
        list.addFirst(20);
        list.addFirst(30);
        list.addFirst(40);
        list.addFirst(50);
        list.print();
        list.remoeNthnode(5);
         list.print();

    }
    
}
